<h1><%= @list.name %></h1>

<% if @bookmarks.empty? %>
  <p>There are no movies in this list yet</p>
<% else %>
  <% @bookmarks.each do |bookmark| %>
    <h3><%= bookmark.movie.title %></h3>
    <h3><%= link_to "Remove from list", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?"}%></h3>
    <p><%= bookmark.comment %></p>
  <% end %>
<% end %>

<%= link_to "Add movie", new_list_bookmark_path(@list) %> 
<%= link_to "Back to Lists", lists_path %> 

